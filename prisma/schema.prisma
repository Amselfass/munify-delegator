datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportVariableName   = "t"
  typeboxImportDependencyName = "elysia"
  output                      = "./generated/schema"
  inputModel                  = true
  additionalFieldsPlain       = ["__typename: t.Optional(t.String())"]
}

model Conference {
  id       String    @id @default(nanoid())
  title    String
  longTitle String?
  start    DateTime?
  end      DateTime?
  location String?
  language  String?
  website  String?
  image    Bytes?
}

model User {
  id                 String @id @default(nanoid())
  email              String
  family_name        String
  given_name         String
  locale             String
  preferred_username String
}
